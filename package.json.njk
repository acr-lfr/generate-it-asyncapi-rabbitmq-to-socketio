{
  "name": "ms-socket-director",
  "version": "1.0.0",
  "description": "This service will consume from a queue and send to all connected sockets - prevents any client gaining direct access to RMQ and permits easier scaling of the director in the future",
  "author": "Liffery",
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "dev:build-watch": "tsc && tsc -w & tsc-alias -w",
    "dev:setup": "git config core.hooksPath githooks && cp -n .env.example .env",
    "dev:start-watch": "nodemon ./build/server.js",
    "generate:server": "generate-it ../ms_rabbitmq_d/build/rabbitmq_asyncapi_1.0.1.yml -y -u -t https://github.com/acrontum/generate-it-asyncapi-rabbitmq-to-socketio.git",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "node ./build/server.js",
    "npm-update-git-deps": "npm-update-git-deps",
    "pm2:start:dev": "pm2 start pm2.dev.config.js",
    "pm2:start:prod": "pm2 start pm2.prod.config.js",
    "quilk-stage2": "npm run build && npm run test && quilk -d stage2",
    "quilk-stage2:cheat": "npm run build && quilk -d stage2",
    "quilk": "npm run test && quilk",
    "quilk:cheat": "npm run build && quilk",
    "quilk:watch": "quilk --watch",
    "release": "npm run build && npm run test && quilk -d production",
    "test": "npm run build && npm run lint && echo 'no tests written'",
    "test:unit": "ENVIRONMENT=test && jest --silent --runInBand",
    "test:unit:single": "ENVIRONMENT=test && jest --collect-coverage false --verbose --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "command-line-args": "^5.1.1",
    "common-utils": "gitlab:liffery/utils/common-utils",
    "dotenv": "^8.2.0",
    "generate-it-logger": "^1.2.4",
    "generate-it-mockers": "^1.0.6",
    "joi": "^17.3.0",
    "mongoose": "~6.8.0",
    "newrelic": "^9.7.4",
    "object-reduce-by-map": "^2.0.2",
    "proc-env-helper": "^1.0.3",
    "q-wrapper": "^1.0.3",
    "socket.io": "^4.0.2",
    "socket.io-client": "^4.0.2",
    "socketio-wildcard": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/command-line-args": "^5.0.0",
    "@types/cors": "^2.8.9",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.24",
    "@types/node": "^18.11.17",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "boats": "^2.4.0",
    "eslint": "^8.30.0",
    "eslint-plugin-deprecate": "^0.7.0",
    "generate-it": "^5.36.0",
    "jest": "^26.6.3",
    "npm-update-git-deps": "^1.4.0",
    "quilk": "^2.9.0",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.8.2",
    "typescript": "~4.9.4"
  },
  "private": true
}
